<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/ThemeGray"
    tools:context="com.example.iiny1.nemotab.BasicGameActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--점수판 레이아웃-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="20dp">
                <!--점수판-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/border">
                    <!--점수-->
                    <TextView
                        android:id="@+id/tvScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
                <!--블럭 리스트-->
                <LinearLayout
                    android:id="@+id/tbBlockList"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/border"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/curBlockBox"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_margin="2dp"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <LinearLayout
                            android:id="@+id/curBlock"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/border"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/nextBlock1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="2dp"
                                android:orientation="horizontal">
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/border"
                            android:layout_weight="1">
                            <LinearLayout
                                android:id="@+id/nextBlock2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_margin="2dp"
                                android:orientation="horizontal">
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--시간 레이아웃-->
            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="match_parent">
                <ProgressBar
                    android:id="@+id/pbTimer"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_drawable" />
            </RelativeLayout>
            <!--게임 레이아웃-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center">
                <!--게임판 레이아웃-->
                <FrameLayout
                    android:layout_width="330dp"
                    android:layout_height="330dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="1dp">
                    <!--메인 게임판-->
                    <TableLayout
                        android:id="@+id/GameBoard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    </TableLayout>
                    <!--임시 게임판-->
                    <TableLayout
                        android:id="@+id/TempBoard"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    </TableLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
        <!--게임 상태 레이아웃-->
        <LinearLayout
            android:id="@+id/layoutGameStateBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="invisible">
            <LinearLayout
                android:id="@+id/layoutGameState"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@color/ThemeBeige">
                <TextView
                    android:id="@+id/tvGameModeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="50dp"
                    android:textColor="@color/ThemeGray"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/tvGameModeInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/ThemeGray"/>
                <LinearLayout
                    android:id="@+id/layoutStateBtns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btnGameState"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textSize="30dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
